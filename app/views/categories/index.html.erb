<h1 class="text-center mt-4">Categories </h1><br/><br/>

	<div class="container">
    	<% @category.each do |category| %>

		    <div class="row d-flex justify-content-center">
		      <div class="col-4 mt-8">
		    <div class="card text-center shadow mb-5 bg-white rounded">
		      <div class="card-body mb-3">
		        <h3 class="card-title"><%= link_to category.name , category_path(category),class:"text-success" %></h3>
		      </div>
		      <div class="card-footer text-muted">
		        <small>Created <%= time_ago_in_words(category.created_at) %> ago
		              Updated <%= time_ago_in_words(category.updated_at) %> ago
		        </small>
		      </div>
		    </div>
		    </div>
		    </div>
		    <% end %>
		    </div>